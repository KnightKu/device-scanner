{
  "description": "Builds an in-memory representation of devices. Uses udev rules to handle change events.",
  "author": "IML Team",
  "private": true,
  "scripts": {
    "prejest": "sendProjFile",
    "jest": "jest",
    "test": "dotnet fable npm-run jest",
    "bootstrap": "lerna bootstrap",
    "restore": "dotnet restore && lerna exec -- dotnet restore",
    "clean": "lerna clean",
    "eslint": "eslint ./",
    "rollup": "rollup -c rollup-config.js"
  },
  "pre-commit": [
    "eslint",
    "test"
  ],
  "fable": {
    "projLocation": "./DeviceScanner.fsproj"
  },
  "jest": {
    "testEnvironment": "node",
    "setupTestFrameworkScriptFile": "./setup-jasmine-env.js",
    "moduleFileExtensions": [
      "js",
      "fs",
      "fsx"
    ],
    "transform": {
      "^.+\\.(fs|fsx)$": "jest-fable-preprocessor",
      "^.+\\.js$": "babel-jest"
    },
    "testMatch": [
      "**/**/*.(test.fs|test.fsx)"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!fable.+)/"
    ]
  },
  "devDependencies": {
    "babel-core": "6.24.1",
    "babel-preset-env": "1.3.3",
    "eslint": "3.19.0",
    "eslint-config-prettier": "1.6.0",
    "eslint-plugin-prettier": "2.0.1",
    "fable-core": "next",
    "fable-jest": "2.4.1",
    "fable-node6": "2.1.0",
    "fable-powerpack": "next",
    "jasmine-reporters": "2.2.1",
    "jest": "19.0.2",
    "jest-fable-preprocessor": "1.1.0",
    "lerna": "2.0.0-rc.1",
    "pre-commit": "1.2.2",
    "prettier": "0.22.0",
    "rollup": "0.41.6",
    "rollup-plugin-fable": "1.0.0",
    "stream-to-promise": "2.2.0"
  }
}
